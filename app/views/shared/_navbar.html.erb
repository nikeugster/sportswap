<div class="navbar navbar-expand-sm navbar-light navbar-sportswap pl-5 pr-5">
  <%= link_to root_path, class: "navbar-brand" do %>
    <div class="logo-flex">
      <h3>Sportswap!</h3>
    </div>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <!-- Searchform -->
  <%= form_tag offers_path, method: :get, class: "search-form" do %>
    <%= text_field_tag :equipment,
    params[:equipment],
    class: "search-input-field first-input",
    autocomplete: "off",
    placeholder: "Equipment" %>
    <%= text_field_tag :location,
    params[:location],
    class: "search-input-field last-input",
    autocomplete: "off",
    placeholder: "Location" %>
    <%# raise %>
    <%= button_tag(type: "submit", class: "btn-search-form") do %>
      <i class="fas fa-search"></i>
    <% end %>
  <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <%= link_to "create a listing", new_offer_path, class: "btn btn-ghost nav-btn" %>
      <% if user_signed_in? %>
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        </a>
        <li class="nav-item dropdown">
          <%= cl_image_tag current_user.photo.key, width: 50, height: 50, gravity: :face, crop: :fill, radius: :max, class: "dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false  %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
            <%= link_to "Profile", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
