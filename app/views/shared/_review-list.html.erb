<div class="reviews-container">
  <div class="col-4 mt-2">
      <div class="show-profile">
      <%= cl_image_tag users.find(review.author_id).photo.key, class: "avatar" %>
      <div class="ml-2">
        <div class="show-name">
          <p><%= users.find(review.author_id).first_name %> <%= users.find(review.author_id).last_name %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="col-8 mt-1">
    <div class="show-rating">
      <% review.rating.times do %>
        <i class="fas fa-star"></i>
      <% end %>
      <% (5 - review.rating).times do  %>
        <i class="far fa-star"></i>
      <% end %>

    </div>
    <div>
      <div class="review-text">
        <%= review.content %>
      </div>
    </div>
  </div>
</div>
